{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["ES6", "DOM"],
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
        "node_modules/@types",
        "@types"
    ],
    "noFallthroughCasesInSwitch": true,
    "plugins": [
      { "name": "typescript-plugin-tw-template" }
    ]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "public", ".cache", "**/*.spec.ts"]
}
