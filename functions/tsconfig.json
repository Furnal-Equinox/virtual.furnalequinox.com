{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["ES2015", "DOM"],
    "allowJs": true,
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./build",
    "typeRoots": [
        "../node_modules/@types",
        "../@types"
    ],
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["build/**/*"]
}
